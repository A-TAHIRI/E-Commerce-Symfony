{% extends "base.html.twig" %}

{% block title %}Administration des produits
{% endblock %}

{% block body %}

	<a class="btn btn-info" href="{{path('admin_product_index')}}">Administrer les produits</a>
	<a class="btn btn-info" href="{{path('admin_categorie_index')}}">Administrer les categories</a>
	<a class="btn btn-info" href="{{path('admin_newsletters_list')}}">Administrer les newsletters</a>
	<h1>Administrer les produits</h1>
	<a href="{{path('admin_product_add')}}" class="btn btn-success ">Ajt</a>

	<fieldset>
		<table class="table">

			<thead>
				<tr>
					<td>Id</td>
					<td>Nom de produit</td>
					<td>Prix</td>
					<td>Image1</td>
					<td>Actions</td>
				</tr>

			</thead>

			<tbody>

				{% for product in products %}

					<tr>
						<td>
							{{product.id}}
						</td>
						<td>
							{{product.name}}
						</td>
						<td>
							{{product.price}}
						</td>
						<td><img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name ) }} " width="100" height="100" alt=""></td>
						<td>

							<a href="{{path('admin_product_edit',{id:product.id})}}" class="btn btn-primary ">Mdf</a>
							<a href="{{path('admin_product_delete',{id:product.id})}}" class="btn btn-danger ">Sup</a>

						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</fieldset>


	<style>


		.fieldset {


			border-radius: 10px;
		}
	</style>
{% endblock %}
